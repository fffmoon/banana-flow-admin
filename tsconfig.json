{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noLib": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": ["node", "vite/client","pinia-plugin-persistedstate","vite-plugin-app-loading/client",],
    "removeComments": true,
    "paths": {
      "@inters/*": ["types/modules/*"],
      "@apis/*": ["src/api/*"],
      "@stores/*": ["src/store/modules/*"],
      "@i18n/*": ["i18n/*"],
      "@mock/*": ["mock/*"],
      "@ui/*": ["src/ui/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "vite.config.ts",
  ],
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"]
}
